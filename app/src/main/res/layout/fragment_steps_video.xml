<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:layout_width="@dimen/exoplayer_dmin"
        android:layout_height="@dimen/exoplayer_dmin"
        android:layout_marginLeft="@dimen/exoplayer_dmin"
        android:layout_marginTop="@dimen/exoplayer_dmin"
        android:layout_marginRight="@dimen/exoplayer_dmin"
        android:layout_marginBottom="@dimen/exoplayer_dmin"
        app:layout_constraintBottom_toTopOf="@+id/horizontalHalf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/horizontalHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        tools:layout_editor_absoluteX="@dimen/exoplayer_dmin"
        tools:layout_editor_absoluteY="@dimen/exoplayer_guidelineY" />

</android.support.constraint.ConstraintLayout>